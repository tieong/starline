# Starline Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Application Settings
DEBUG=true
APP_NAME="Starline Backend"
APP_VERSION="0.1.0"

# Database Settings (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres:[PASSWORD]@[PROJECT].supabase.co:5432/postgres
SUPABASE_URL=https://[PROJECT].supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# AI Provider Configuration
# Options: "blackbox" or "perplexity"
AI_PROVIDER=perplexity

# Blackbox AI (if using blackbox provider)
BLACKBOX_API_KEY=your_blackbox_api_key_here
BLACKBOX_BASE_URL=https://api.blackbox.ai
BLACKBOX_MODEL=blackboxai/openai/gpt-4

# Perplexity AI (if using perplexity provider)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
PERPLEXITY_BASE_URL=https://api.perplexity.ai
PERPLEXITY_MODEL=sonar-pro

# External APIs
YOUTUBE_API_KEY=your_youtube_api_key_here

# CORS Configuration (handled automatically based on DEBUG mode)
# In DEBUG mode: all origins allowed
# In production: specific origins only

